OFF_WHITE = #fcf5e2
MAIN_AQUA = #32ae9b

p, li
  line-height 1.5em

li
  list-style-type none

#navigation
  background-color #B1362A
  min-height 80px
  line-height 80px

  h1
    color OFF_WHITE
    font-size 18px
    font-weight 800
    margin 0px
    min-width 250px

  .links
    a
      color OFF_WHITE
      padding 5px 10px

      &.active
        background-color: #ffa137
        padding 6px 10px
        border-radius 5px

  #changeLang
    color #a62119
    font-weight 800
    font-size 19px
    outline none
    background-color OFF_WHITE
    border none
    border-radius 5px
    padding 0 20px
    height 40px

#banner
  color OFF_WHITE
  background-color #D14431
  padding-top 30px

  img
    border 10px solid OFF_WHITE
    border-radius 50%

  h1
    margin-top 50px

#main_content
  min-height 500px
  background-color OFF_WHITE
  padding 60px 0

  .btn_menu
    a
      display block
      background-color OFF_WHITE
      border 3px solid MAIN_AQUA
      border-radius 5px
      color MAIN_AQUA
      width 100%
      height 60px
      padding 10px
      margin-bottom 10px
      font-size 20px
      line-height 38px
      font-weight 800

      &.active
        color OFF_WHITE
        background-color MAIN_AQUA

      &.active:after
        content ""
        position absolute
        right 28px
        margin-top 10px
        width 0
        height 0
        border-top 8px solid transparent
        border-bottom 8px solid transparent
        border-left 10px solid OFF_WHITE

  .menu_content
    h1
      font-size 40px
      margin-top 0px
      color MAIN_AQUA

    h2
      color #917070

      a
        color #917070
      a:hover
        color MAIN_AQUA

#sponsors
  color OFF_WHITE
  background-color #211641
  padding-top 60px
  line-height 110px
  min-height 220px

  span
    font-size 14px

#footer
  background-color MAIN_AQUA
  padding 70px 0

  h1
    font-size 14px
    color OFF_WHITE
    margin-bottom 5px
  a
    span
      font-size 14px
      display block
      color #73e3d0
      margin-bottom 5px

  button
    outline none
    border none
    border-radius 5px
    color MAIN_AQUA
    background-color OFF_WHITE
    width 100%
    height 60px
    font-size 20px
    font-weight 800
    margin-bottom 15px

#contact
  color OFF_WHITE
  background-color #248d7c
  p
    line-height 25px
    font-size 12px
    text-align center
