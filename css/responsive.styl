OFF_WHITE = #fcf5e2

@media $media-max-phone
  *       // TODO: Does this look good? Use on tablets as well?
    text-align center

  #banner
    img
      width 250px

  .links
    a
      display block
      width 100%
      height 60px
      line-height 50px
      font-weight 800

      &.active
        background-color: #ffa137
        padding 6px 10px
        border-radius 5px

  #main_content
    p, h2, li       // TODO: Centered or left justified paragraphs/li?
      text-align left
    #schedule
      div
        text-align left
        margin-bottom .5em
  #sponsors
    img
      max-width 290px
  #zooniverse
    img
      margin 0 auto

@media $media-min-tablet
  #banner
    img
      margin 20px 20px -25px 0

  #sponsors
    img
      margin-bottom 40px

@media $media-max-tablet
  #footer
    button
      margin-top 30px
  #navigation
    h1
      padding-left 10px
  #main_content
    #schedule
      div
        text-align left
        margin-bottom .5em

@media $media-min-lg-desktop
  #navigation
    .links
      a
        margin-left 30px
