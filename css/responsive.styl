OFF_WHITE = #fcf5e2

@media $media-max-phone
  #banner
    img       // TODO: center on mobile
      width 250px

  #changeLang
    margin-left 10px

  .links
    a
      display block
      width 100%
      height 60px
      line-height 50px
      font-weight 800

      &.active
        background-color: #ffa137
        padding 6px 10px
        border-radius 5px

  *       // TODO: Does this look good? Use on tablets as well?
    text-align center
  #main_content
    p, h2, li       // Centered or left justified paragraphs/li?
      text-align left

@media $media-min-tablet
  #banner
    img
      margin 20px 20px -25px 0

@media $media-max-tablet
  #footer
    button
      margin-top 30px
  #navigation
    h1
      padding-left 10px

@media $media-min-lg-desktop
  #navigation
    .links
      a
        margin-left 30px
