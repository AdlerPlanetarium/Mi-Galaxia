<div id="navigation">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        {{#linkTo 'event.about'}}{{translate 'h1' 'home.title'}}{{/linkTo}}
      </div>

      <div class="col-sm-8 col-md-7">
        <div class="links">
          {{#linkTo 'event'}}{{translate 'span' 'nav.event'}}{{/linkTo}}
          {{#linkTo 'scientists'}}{{translate 'span' 'nav.scientists'}}{{/linkTo}}
          {{#linkTo 'resources'}}{{translate 'span' 'nav.resources'}}{{/linkTo}}
          {{#linkTo ''}}{{translate 'span' 'nav.getTickets'}}{{/linkTo}}
        </div>
      </div>

      <div class="col-sm-1">
        <button {{action 'changeLanguage'}} id="changeLang">Español</button>
      </div>
    </div>
  </div>
</div>

<div id="banner">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <img src="http://dummyimage.com/375X375/#/fff.jpg">
      </div>
      <div class="col-md-6">
        {{translate 'h1' 'home.callout'}}
        {{translate 'p' 'home.intro'}}
      </div>
    </div>
  </div>
</div>

<div id="main_content">
  <div class="container">
    {{outlet}}
  </div>
</div>

<div id="sponsors">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-md-3">
        <span>Thank you to our sponsors:</span>
      </div>
      <div class="col-sm-6 col-md-3">
        <img src="http://dummyimage.com/150X75/211641/fcf5e2&text=apple">
      </div>
      <div class="col-sm-6 col-md-3">
        <img src="http://dummyimage.com/150X75/211641/fcf5e2&text=walgreens">
      </div>
      <div class="col-sm-6 col-md-3">
        <img src="http://dummyimage.com/150X75/211641/fcf5e2&text=bing">
      </div>
    </div>
  </div>
</div>

<div id="footer">
  <div class="container">
    <div class="row">
      <div class="col-md-3" >
        <a href="http://www.adlerplanetarium.org/">
          <img src="http://dummyimage.com/225X150/32ae9b/fcf5e2&text=ADLER+PLANETARIUM">
        </a>
      </div>

      <div class="col-sm-4 col-md-2">
        <h1>The Event</h1>
        {{#linkTo 'event.about'}}<span {{action 'scrollToMainContent'}}>About</span>{{/linkTo}}
        {{#linkTo 'event.schedule'}}<span {{action 'scrollToMainContent'}}>Schedule</span>{{/linkTo}}
        {{#linkTo 'event.getting_here'}}<span {{action 'scrollToMainContent'}}>Getting Here</span>{{/linkTo}}
        {{#linkTo 'event.questions'}}<span {{action 'scrollToMainContent'}}>Questions</span>{{/linkTo}}
      </div>

      <div class="col-sm-4 col-md-2">
        <h1>Latino Scientists</h1>
        {{#linkTo 'scientists.julieta_fierro'}}<span {{action 'scrollToMainContent'}}>Julieta Fierro</span>{{/linkTo}}
        {{#linkTo 'scientists.luis_nasser'}}<span {{action 'scrollToMainContent'}}>Luis Nasser</span>{{/linkTo}}
        {{#linkTo 'scientists.ursala_perez_salas'}}<span {{action 'scrollToMainContent'}}>Ursala Perez-Salas</span>{{/linkTo}}
        {{#linkTo 'scientists.jose_francisco_salgado'}}<span {{action 'scrollToMainContent'}}>José Francisco Salgado</span>{{/linkTo}}
        {{#linkTo 'scientists.julieta_aguilera'}}<span {{action 'scrollToMainContent'}}>Julieta Aguilera</span>{{/linkTo}}
      </div>

      <div class="col-sm-4 col-md-2">
        <h1>Resources</h1>
        {{#linkTo 'resources.nasa'}}<span {{action 'scrollToMainContent'}}>NASA en Español</span>{{/linkTo}}
        {{#linkTo 'resources.adler_activities'}}<span {{action 'scrollToMainContent'}}>Adler Activities</span>{{/linkTo}}
        {{#linkTo 'resources.summer_camps'}}<span {{action 'scrollToMainContent'}}>Summer Camps</span>{{/linkTo}}
        {{#linkTo 'resources.citizen_science'}}<span {{action 'scrollToMainContent'}}>Citizen Science</span>{{/linkTo}}
      </div>

      <div class="clearfix visible-sm"></div>

      <div class="col-md-3">
        <button>Buy Tickets!</button><br>

        <div class="container">
          <div class="row">
            <div class="col-xs-2 col-sm-1 col-md-3">
              <a href='https://www.facebook.com/adlerplanetarium'><img src="http://dummyimage.com/50X50/32ae9b/73e3d0.jpg&text=Facebook"></a>
            </div>
            <div class="col-xs-2 col-sm-1 col-md-3">
              <a href='https://twitter.com/adlerskywatch'><img src="http://dummyimage.com/50X50/32ae9b/73e3d0.jpg&text=Twitter"></a>
            </div>
            <div class="col-xs-4 col-sm-1 col-md-6">
              <a href='http://www.youtube.com/adlerplanetarium'><img src="http://dummyimage.com/100X50/32ae9b/73e3d0.jpg&text=YouTube"></a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

